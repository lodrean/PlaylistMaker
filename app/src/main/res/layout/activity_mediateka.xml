<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ActivityStyle"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    tools:context=".mediateka.ui.MediatekaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="52dp"
        android:paddingBottom="4dp">


        <Button
            android:id="@+id/back"
            style="@style/BackSettingsButtonStyle"
            app:icon="@drawable/arrow_back" />

        <TextView
            style="@style/TextSettingsStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="14dp"
            android:paddingTop="10dp"
            android:text="@string/mediateka"
            android:textFontWeight="500"
            android:textSize="@dimen/medium_text_size" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/section_margin"
        android:layout_marginRight="@dimen/section_margin"
        android:background="@color/white"
        app:tabRippleColor="@color/YP_black"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/YP_black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>