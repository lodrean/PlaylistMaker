<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.PlaylistMaker">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            tools:context=".playlist.ui.PlaylistFragment">
            <View
                android:id="@+id/header_toolbar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:layout_constraintBottom_toTopOf="@id/playlist_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-52dp" />

            <ImageButton
                android:id="@+id/back_button"
                style="@style/BackSettingsButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_back" />


            <ImageView
                android:id="@+id/playlist_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:minWidth="360dp"
                app:layout_constraintDimensionRatio="h,1:1"
                android:src="@drawable/placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:ignore="MissingConstraints" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />



            <TextView
                android:id="@+id/tv_playlistTitle"
                style="@style/FontStyle.Track.Player"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/playlist_image"
                tools:ignore="MissingConstraints"
                tools:text="Best songs 2021" />

            <TextView
                android:id="@+id/tv_playlist_description"
                style="@style/FontStyle.Track.Player.Artist"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_playlistTitle"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                tools:ignore="MissingConstraints"
                tools:text="2022" />


            <ImageView
                android:id="@+id/separator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="13dp"
                android:src="@drawable/ic"
                app:layout_constraintStart_toEndOf="@id/tv_playlist_description"
                app:layout_constraintTop_toTopOf="@id/tv_playlist_description"
                tools:ignore=""
                />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="266dp" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/textsBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_tags="durationTag, albumTag, yearTag, genreTag, countryTag"
                app:layout_constraintHorizontal_bias="0.3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/playlists_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_bg"
            android:gravity="center_horizontal"
            android:minHeight="266dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounder" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bottomSheetRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/item_playlist_bottomsheet" />


            <!-- Вёрстка Bottom Sheet с кнопкой и списком -->

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>
