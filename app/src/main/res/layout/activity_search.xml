<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    app:layout_constraintDimensionRatio="1:1"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="52dp"
        android:paddingBottom="4dp">


        <Button
            android:id="@+id/back"
            style="@style/BackSettingsButtonStyle"
            app:icon="@drawable/arrow_back" />

        <TextView
            style="@style/TextSettingsStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="14dp"
            android:paddingTop="10dp"
            android:text="@string/search"
            android:textFontWeight="500"
            android:textSize="@dimen/medium_text_size" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/search_field">


        </ImageView>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:background="@color/YP_Light_Gray"
            android:backgroundTint="@color/YP_Light_Gray"
            android:src="@drawable/search"
            app:tint="@color/YP_Text_Gray" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="56dp"
            android:background="@null"
            android:contextClickable="true"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/YP_Text_Gray"
            android:textCursorDrawable="@color/YP_Blue" />

        <ImageView
            style="@style/IconSearchStyle"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/clearIcon"
            style="@style/IconSearchStyle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/baseline_close_24"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
